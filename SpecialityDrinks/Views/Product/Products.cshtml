@model List<SpecialityDrinks.Models.Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>title</title>
</head>
<body>
    <div>
        <table id="products" class="row-border order-column hover display nowrap" cellspacing="0" width="100%">

            <thead>
                <tr>
                    <th></th>
                    <th>Name </th>
                    <th>Brand </th>
                    <th>Size </th>
                    <th>Strength </th>
                    <th>Price </th>
                    <th>Delete </th>

                </tr>
            </thead>
        </table>
    </div>
</body>
</html>

@section scripts
{
    <script>
        $(document)
            .ready(function() {
              

            var table = $("#products").DataTable({

                ajax: {
                    url: "/api/products",
                    dataSrc: ""
                },
                columns: [
                                {
                                    data: "id"

                                },
                                {
                                    data: "name",
                                    render: function (data, type, product) {
                                        return "<a href='/product/edit/" + product.id + "'>" + product.name + "</a>";
                                    }
                                },
                                {
                                    data: "brand"
                                },

                                {
                                    data: "size"
                                },

                                {
                                    data: "strength"
                                },

                                {
                                    data: "price"
                                }
                                ,
                                 {
                                     data: "id",
                                     render: function (data) {
                                         return "<button class='js-delete' data-product-id=" + data +
                                             ">Delete</button>";
                                     }
                                 }

                ],
                "lengthMenu": [[5, 10, 20, 25], [5, 10, 20, 25]],
                responsive: {
                    details: {
                        type: 'column',
                        target: 'tr'
                    }
                }
                ,
                columnDefs: [{
                    className: 'control',
                    orderable: false,
                    targets: 0
                }]//,
                //order: [1, 'asc']

            });


            $("#products")
                       .on("click", ".js-delete",
                           function () {

                               var button = $(this);

                               modal({
                                   type: 'confirm',
                                   title: 'Confirm',
                                   text: 'Are you sure you want to delete this product?',
                                   callback: function (result) {
                                       if (result) {


                                           $.ajax({
                                               url: "/api/products/" + button.attr("data-product-id"),
                                               method: "DELETE",
                                               success: function () {

                                                   table.row(button.parents("tr")).remove().draw();
                                                   toastr.success('Product Deleted');

                                               }
                                           });
                                       }
                                   }
                               });
                           });
        });
    </script>
}